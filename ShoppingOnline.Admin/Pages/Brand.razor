@page "/brands" 

@if (_brandVM.Count == 0)
{
    <span class="loaderAnimation" ></span>
}else{

    <MudTable Items="_brandVM" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>CreateBy</MudTh>

    </HeaderContent>
    <RowTemplate >
        <MudTd DataLabel="Nr">@context.Name </MudTd>
        <MudTd DataLabel="Sign">@context.Status</MudTd>
        <MudTd DataLabel="Name">@context.CreateBy</MudTd>
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.FullscreenExit" Href=@($"/BrandDetail/{context.Id}") />
            <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.BorderColor" Href=@($"/BrandUpdate/{context.Id}")/>
            <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.DeleteSweep" DisableElevation="true" @onclick="()=> DeleteBrands(context.Id)" />


    </RowTemplate>
    
</MudTable>
    <br>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="BrandCreate">Create New</MudButton>
}




