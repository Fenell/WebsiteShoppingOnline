@page "/categorys"
@if (_categoryVM.Count == 0)
{
        <span class="loaderAnimation2" ></span>
}
else
{

    <MudTable Items="_categoryVM" Hover="true" Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>SeoTitle</MudTh>
            <MudTh>Status</MudTh>
            

        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nr">@context.Name</MudTd>
            <MudTd DataLabel="Sign">@context.SeoTitle</MudTd>
            <MudTd DataLabel="Name">@context.Status</MudTd>

            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.FullscreenExit" Href=@($"/categoryDetail/{context.Id}") />
            <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.BorderColor" Href=@($"/categoryUpdate/{context.Id}") />
            <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.DeleteSweep" DisableElevation="true" @onclick="()=> DeleteCategorys(context.Id)" />
        </RowTemplate>
     
    </MudTable>
    <br>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="CategoryCreate">Create New</MudButton>
}


