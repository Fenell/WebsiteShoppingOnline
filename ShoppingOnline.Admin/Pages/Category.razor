@page "/categorys"
@attribute [Authorize(Roles = "Administrator")]
@if (_categoryVM.Count == 0)
{
    <span class="loaderAnimation2"></span>
}
else
{
    <MudTable Items="_categoryVM" Hover="true" Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Người tạo</MudTh>
            <MudTh>Thời gian tạo</MudTh>
            <MudTh>Status</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nr">@context.Name</MudTd>
            <MudTd DataLabel="Sign">@context.CreatedUserName</MudTd>
            <MudTd DataLabel="Name">@context.CreatedAt</MudTd>
            <MudTd DataLabel="Name">
                <StatusComponent Status="@context.Status" />
            </MudTd>
            <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.RemoveRedEye" Href=@($"/categoryDetail/{context.Id}") />
            <MudIconButton Color="Color.Secondary" Icon="@Icons.Material.Filled.Edit" Href=@($"/categoryUpdate/{context.Id}") />
            <MudIconButton Color="Color.Tertiary" Icon="@Icons.Material.Filled.Delete" DisableElevation="true" @onclick="()=> DeleteCategorys(context.Id)" />
        </RowTemplate>
    </MudTable>
    <br>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="CategoryCreate">Create New</MudButton>
}


