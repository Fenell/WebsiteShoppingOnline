@page "/categoryDetail/{CategoryId:guid}"


<h3>CategoryDetail</h3>
@if (_CategoryVM.Name != null)
{
    <h3>Detail @_CategoryVM.Name</h3>
    <table class="table">
        <tr>
            <td>Tên</td>
            <td>@_CategoryVM.Name</td>
        </tr>
	    <tr>
		    <td>Ngày tạo</td>
		    <td>@_CategoryVM.CreatedAt.ToString("dd/MM/yyyy h:mm tt")</td>
	    </tr>
	    <tr>
		    <td>Người tạo</td>
		    <td>@_CategoryVM.CreatedUserName</td>
	    </tr>
	    <tr>
		    <td>Ngày sửa</td>
		    <td>@_CategoryVM.UpdateAt.ToString("dd/MM/yyyy h:mm tt")</td>
	    </tr>
	    <tr>
		    <td>Người sửa</td>
		    <td>@_CategoryVM.UpdatedUserName</td>
	    </tr>

    </table>
}
